---
import productos from "../../assets/json/hombres.json" assert { type: "json" };
---

<section class="hombresection">
  <div class="hombres">
    <div class="primera-linea">
      <h1>¡Lo más nuevo!</h1>
      <a href="#">Ver Más</a>
    </div>
    <div class="demo-container">
      {
        productos.map((producto) => (
          <div class="card">
            <div
              class="card-image"
              style={`background-image: url(${producto.img})`}
              on:mouseenter={(e) =>
                (e.currentTarget.style.backgroundImage = `url(${producto.imgHover})`)
              }
              on:mouseleave={(e) =>
                (e.currentTarget.style.backgroundImage = `url(${producto.img})`)
              }
            />
            <div class="card-content">
              <h3 class="card-title">{producto.title}</h3>
              <p class="card-description">{producto.description}</p>
              <div class="line">
                <div class="card-price">{producto.price}</div>
                <a class="card-button" href={`/productos/${producto.id}`}>
                  IR
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  /* Contenedor principal */
  .hombresection {
    width: 100%;
    background: #f5f5f5;
    padding: 5px 0;
  }
  .hombres {
    width: 90%;
    max-width: 1200px;
    margin: 30px auto;
    font-family: "Arial", sans-serif;
    padding: 0 15px;
  }

  /* Línea superior */
  .primera-linea {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
  }
  .primera-linea h1 {
    font-size: 24px;
    color: #222;
  }
  .primera-linea a {
    color: #d00000;
    font-weight: bold;
    text-decoration: none;
    transition: color 0.3s;
  }
  .primera-linea a:hover {
    color: #a00000;
  }

  .card {
    width: 200px;
    height: 390px;
    background: white;
    overflow: hidden;
    transition: all 0.3s ease;
    cursor: pointer;
    position: relative;
  }

  .card-image {
    width: 100%;
    height: 240px;
    position: relative;
    overflow: hidden;
    background-image: url("../imgAparte/hombrecamisa.jpeg");
    background-size: cover;
    background-position: center;
  }
  .card-image:hover {
    background-image: url("../imgAparte/hombrecamisa2.jpeg");
  }
  .card-content {
    padding: 12px;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    height: 170px;
  }
  .card-title {
    font-size: 17px;
    font-weight: 600;
    margin: 10px 0;
    color: #333;
    line-height: 1.2;
    font-family: "Delsius", sans-serif;
  }

  .card-description {
    font-size: 12px;
    margin-bottom: 15px;
    margin-top: -2px;
    color: #666;
  }

  .card-price {
    font-size: 18px;
    font-weight: 700;
    color: #e74c3c;
  }

  .card-button {
    background-color: #d00000;
    color: white;
    border: none;
    padding: 8px 16px;
    border-radius: 6px;
    font-size: 12px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  .line {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .card-button:hover {
    transform: scale(1.05);
    box-shadow: 0 4px 10px rgba(102, 126, 234, 0.3);
  }

  .card-button:active {
    transform: scale(0.98);
  }

  /* Ejemplos de cards */
  .demo-container {
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
    justify-content: center;
  }

  /* Responsive móvil */
  @media (max-width: 600px) {
    .primera-linea {
      gap: 10px;
    }
  }
</style>