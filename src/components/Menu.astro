            background: none;
            border: none;
            color: white;
            font-size: 24px;
            cursor: pointer;
            padding: 5px;
            border-radius: 50%;
            transition: all 0.3s ease;
        }

        .close-btn:hover {
            background: rgba(255, 255, 255, 0.2);
            transform: rotate(90deg);
        }

        .menu-content {
            padding: 0;
        }

        .menu-section {
            border-bottom: 1px solid #e0e0e0;
        }

        .section-title {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 20px 30px;
            font-family: 'Pacifico', cursive;
            font-size: 1.2rem;
            color: #d00000;
            cursor: pointer;
            transition: all 0.3s ease;
            user-select: none;
        }

        .section-title:hover {
            background: rgba(208, 0, 0, 0.05);
        }

        .section-title i:first-child {
            font-size: 20px;
            margin-right: 15px;
        }

        .toggle-icon {
            transition: transform 0.3s ease;
        }

        .section-title.active .toggle-icon {
            transform: rotate(180deg);
        }

        .submenu {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.4s ease;
            background: rgba(248, 249, 250, 0.8);
        }

        .submenu.active {
            max-height: 500px;
        }

        .category {
            padding: 0px 30px 10px 60px;
        }

        .category h4 {
            display: flex;
            align-items: center;
            color: #d00000;
            font-family: 'Delius', cursive;
            font-size: 1.1rem;
            margin-bottom: 15px;
            font-weight: bold;
        }

        .category h4 i {
            margin-right: 10px;
            font-size: 16px;
        }

        .category ul {
            list-style: none;
            margin-left: 20px;
        }

        .category li {
            margin-bottom: 8px;
        }

        .category a {
            text-decoration: none;
            color: #333;
            font-family: 'Roboto Slab', serif;
            transition: all 0.3s ease;
            display: block;
            padding: 5px 0;
            position: relative;
        }

        .category a::before {
            content: '';
            position: absolute;
            left: -15px;
            top: 50%;
            transform: translateY(-50%);
            width: 6px;
            height: 6px;
            border-radius: 50%;
            background: #d00000;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .category a:hover {
            color: #d00000;
            font-weight: 600;
            transform: translateX(10px);
        }

        .category a:hover::before {
            opacity: 1;
        }

        .menu-footer {
            padding: 30px;
            text-align: center;
            background: rgba(248, 249, 250, 0.8);
            margin-top: 20px;
        }

        .social-links {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-bottom: 20px;
        }

        .social-links a {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 45px;
            height: 45px;
            border-radius: 50%;
            color: #d00000;
            font-size: 30px;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .social-links a:hover {
            transform: translateY(-3px);
        }

        .menu-footer p {
            color: #666;
            font-size: 12px;
            font-family: 'Roboto Slab', serif;
        }

        /* Main Content */
        .main-content {
            margin-top: 80px;
            padding: 60px 20px;
        }

        .hero-section {
            text-align: center;
            max-width: 800px;
            margin: 0 auto;
        }

        .hero-section h2 {
            font-size: 2.5rem;
            font-family: 'Pacifico', cursive;
            background: linear-gradient(45deg, #d00000, #ff4444);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 20px;
        }

        .hero-section p {
            font-size: 1.2rem;
            color: #666;
            font-family: 'Roboto Slab', serif;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .hamburger-menu {
                width: 320px;
                left: -320px;
            }

            .input-box input {
                width: 200px;
                display: none;
            }
            .input-box {
                display: none;
            }
            

            .menu-container {
                padding: 0 15px;
            }

            .logo h1 {
                font-size: 1.4rem;
            }

            .hero-section h2 {
                font-size: 2rem;
            }
        }

        @media (max-width: 480px) {
            .hamburger-menu {
                width: 280px;
                left: -280px;
            }

            .input-box input {
                width: 150px;
                font-size: 13px;
                display: none;
            }

            .search {
                gap: 10px;
            }

            .btns {
                gap: 5px;
            }
        }
    </style>
    <script>
         const hamburgerBtn = document.getElementById('hamburgerBtn');
        const hamburgerMenu = document.getElementById('hamburgerMenu');
        const closeBtn = document.getElementById('closeBtn');
        const menuOverlay = document.getElementById('menuOverlay');
        const sectionTitles = document.querySelectorAll('.section-title');

        // Función para abrir el menú
        function openMenu() {
            hamburgerMenu.classList.add('active');
            menuOverlay.classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        // Función para cerrar el menú
        function closeMenu() {
            hamburgerMenu.classList.remove('active');
            menuOverlay.classList.remove('active');
            document.body.style.overflow = '';
        }

        // Event listeners para abrir/cerrar menú
        hamburgerBtn.addEventListener('click', openMenu);
        closeBtn.addEventListener('click', closeMenu);
        menuOverlay.addEventListener('click', closeMenu);

        // Funcionalidad de acordeón para las secciones
        sectionTitles.forEach(title => {
            title.addEventListener('click', () => {
                const submenu = title.nextElementSibling;
                const isActive = title.classList.contains('active');

                // Cerrar todas las secciones
                sectionTitles.forEach(otherTitle => {
                    otherTitle.classList.remove('active');
                    otherTitle.nextElementSibling.classList.remove('active');
                });

                // Si no estaba activa, abrir la seleccionada
                if (!isActive) {
                    title.classList.add('active');
                    submenu.classList.add('active');
                }
            });
        });

        // Cerrar menú con tecla Escape
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape' && hamburgerMenu.classList.contains('active')) {
                closeMenu();
            }
        });

        // Función de búsqueda (placeholder)
        const searchBtn = document.querySelector('.search-btn');
        const searchInput = document.querySelector('.input-box input');

        searchBtn.addEventListener('click', () => {
            const query = searchInput.value.trim();
            if (query) {
                alert(`Buscando: ${query}`);
                // Aquí irían las funciones de búsqueda reales
            }
        });

        // Búsqueda con Enter
        searchInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                searchBtn.click();
            }
        });

        // Animación suave al hacer scroll
        window.addEventListener('scroll', () => {
            const menu = document.querySelector('.menu');
            if (window.scrollY > 50) {
                menu.style.background = 'rgba(255, 255, 255, 0.95)';
            } else {
                menu.style.background = '#ffffff';
            }
        });
    </script>
