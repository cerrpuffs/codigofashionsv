    <style>
         * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f8f9fa;
            overflow-x: hidden;
        }

        /* Navbar */
        .menu {
            background: #ffffff;
            box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
            position: sticky;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
            backdrop-filter: blur(10px);
        }

        .menu-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 20px;
            height: 80px;
            max-width: 1400px;
            margin: 0 auto;
        }

        .hamburger-btn {
            background: none;
            border: 2px solid #e0e0e0;
            border-radius: 12px;
            padding: 12px 16px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .hamburger-btn:hover {
            border-color: #d00000;
            background: linear-gradient(45deg, #d00000, #ff4444);
            transform: translateY(-2px);
        }

        .hamburger-btn:hover i {
            color: white;
        }

        .hamburger-btn i {
            font-size: 20px;
            color: #d00000;
            transition: all 0.3s ease;
        }

        .logo h1 {
            font-size: 1.8rem;
            font-family: 'WDXL Lubrifont TC', sans-serif;
            color: #d00000;
            letter-spacing: 1px;
        }

        .logo span {
            color: #2323ff !important;
        }

        /* Search */
        .search {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .input-box {
            position: relative;
            display: flex;
            align-items: center;
        }

        .input-box input {
            padding: 12px 60px 12px 20px;
            border: 2px solid #e0e0e0;
            border-radius: 25px;
            font-size: 14px;
            font-family: 'Roboto Slab', serif;
            width: 350px;
            transition: all 0.3s ease;
            background: rgba(255, 255, 255, 0.9);
        }

        .input-box input:focus {
            outline: none;
            border-color: #d00000;
            box-shadow: 0 0 20px rgba(208, 0, 0, 0.2);
            transform: translateY(-1px);
        }

        .search-btn {
            position: absolute;
            right: 8px;
            background: linear-gradient(45deg, #d00000, #ff4444);
            border: none;
            border-radius: 50%;
            width: 35px;
            height: 35px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .search-btn:hover {
            transform: scale(1.1);
            box-shadow: 0 4px 15px rgba(208, 0, 0, 0.3);
        }

        .search-btn i {
            color: white;
            font-size: 14px;
        }

        .btns {
            display: flex;
            gap: 10px;
        }

        .btn-icon {
            position: relative;
            width: 45px;
            height: 45px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
            text-decoration: none;
        }

        .btn-icon:hover {
            background: linear-gradient(45deg, #d00000, #ff4444);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(208, 0, 0, 0.3);
        }

        .btn-icon i {
            font-size: 18px;
            color: #d00000;
            transition: all 0.3s ease;
        }

        .btn-icon:hover i {
            color: white;
        }

        .cart-count {
            position: absolute;
            top: -5px;
            right: -5px;
            background: linear-gradient(45deg, #d00000, #ff4444);
            color: white;
            font-size: 11px;
            font-weight: bold;
            padding: 3px 7px;
            border-radius: 50%;
            min-width: 20px;
            height: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.1); }
            100% { transform: scale(1); }
        }

        /* Menu Overlay */
        .menu-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 1998;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
            backdrop-filter: blur(3px);
        }

        .menu-overlay.active {
            opacity: 1;
            visibility: visible;
        }

        /* Hamburger Menu */
        .hamburger-menu {
            position: fixed;
            top: 0;
            left: -400px;
            width: 400px;
            height: 100vh;
            background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
            z-index: 1999;
            transition: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
            box-shadow: 5px 0 30px rgba(0, 0, 0, 0.1);
            overflow-y: auto;
        }

        .hamburger-menu.active {
            left: 0;
        }
        .leftside {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .menu-header {
